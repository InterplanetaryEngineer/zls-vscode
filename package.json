{
	"name": "zls-vscode",
	"author": {
		"name": "Auguste Rame",
		"url": "https://augustera.me"
	},
	"publisher": "AugusteRame",
	"displayName": "ZLS for VSCode",
	"description": "A language client for `zls`.",
	"repository": {
		"type": "git",
		"url": "https://github.com/zigtools/zls-vscode"
	},
	"version": "1.0.0",
	"engines": {
		"vscode": "^1.44.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onLanguage:zig"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "zigLanguageClient.startStreaming",
				"title": "Zig Language Client: Start Streaming"
			}
		],
		"configuration": {
			"type": "object",
			"title": "Zig language client configuration",
			"properties": {
				"zigLanguageClient.path": {
					"scope": "resource",
					"type": "string",
					"description": "Path to `zls` executable."
				},
				"zigLanguageClient.trace.server": {
					"scope": "window",
					"type": "object",
					"description": "Traces the communication between VS Code and the language server.",
					"properties": {
						"verbosity": {
							"type": "string",
							"description": "Controls the verbosity of the trace.",
							"enum": [
								"off",
								"message",
								"verbose"
							],
							"default": "off"
						},
						"format": {
							"type": "string",
							"description": "Controls the output format of the trace.",
							"enum": [
								"text",
								"json"
							],
							"default": "text"
						}
					}
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"lint": "eslint src --ext ts",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"test": "node ./out/test/runTest.js"
	},
	"dependencies": {
		"vscode-languageclient": "^6.1.3"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^7.0.2",
		"@types/node": "^13.11.0",
		"@types/vscode": "^1.44.0",
		"@typescript-eslint/eslint-plugin": "^2.26.0",
		"@typescript-eslint/parser": "^2.26.0",
		"eslint": "^6.8.0",
		"glob": "^7.1.6",
		"mocha": "^7.1.1",
		"typescript": "^3.8.3",
		"vscode-test": "^1.3.0"
	}
}
